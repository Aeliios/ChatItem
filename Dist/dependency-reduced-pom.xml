<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>ChatItems-parent</artifactId>
    <groupId>xyz.mackan</groupId>
    <version>1.0.8</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>xyz.mackan</groupId>
  <artifactId>ChatItems-dist</artifactId>
  <version>${project.parent.version}</version>
  <build>
    <directory>../target</directory>
    <finalName>ChatItems-${project.parent.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>xyz.mackan:ChatItems-*</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.0.1</version>
        <configuration>
          <show>public</show>
          <windowtitle>ChatItems API</windowtitle>
          <verbose>false</verbose>
          <author>true</author>
          <version>true</version>
          <linksource>true</linksource>
          <notimestamp>true</notimestamp>
          <bottom>&lt;b&gt;Mackan 2020&lt;/b&gt;</bottom>
          <reportOutputDirectory>${project.build.directory}</reportOutputDirectory>
          <destDir>javadoc-latest</destDir>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.github.PikaMug</groupId>
      <artifactId>LocaleLib</artifactId>
      <version>1.6</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>
